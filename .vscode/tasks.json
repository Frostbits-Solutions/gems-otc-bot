{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Docker Debug",
            "type": "shell",
            "command": "docker compose down && docker compose -f docker-compose.debug.yml up --build -d",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Stop Docker Debug",
            "type": "shell",
            "command": "docker compose -f docker-compose.debug.yml down",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}